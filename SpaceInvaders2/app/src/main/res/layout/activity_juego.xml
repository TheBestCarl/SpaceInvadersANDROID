<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_juego"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.winrob.spaceinvaders2.Juego"
    android:background="@drawable/espacio"
    android:onClick="desplazamientoD">

    <Button
        android:text="Der"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:id="@+id/Derecha"
        android:onClick="desder"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp" />

    <Button
        android:text="Izq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Izquierda"
        android:layout_marginStart="22dp"
        android:layout_alignBaseline="@+id/Derecha"
        android:layout_alignBottom="@+id/Derecha"
        android:layout_alignParentStart="true"
        android:onClick="desIzq" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/naveico"
        android:layout_marginBottom="39dp"
        android:id="@+id/nave"
        android:layout_above="@+id/Derecha"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
